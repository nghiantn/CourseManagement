@model IEnumerable<CourseManagement.Models.Class>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCalendarNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdLecturerNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdStudentNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCalendarNavigation.IdCalendar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdLecturerNavigation.IdAccount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdStudentNavigation.IdAccount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdClass">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdClass">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdClass">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
