@model CourseManagement.Models.Course

@{
    ViewData["Title"] = "Chỉnh sửa khóa học";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}}

<!-- ======= #main ======= -->
<main id="main" class="main">
    <!-- Page Title -->
    <div class="pagetitle">
        <h1>@ViewData["Title"]</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"> <a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ Admin</a> </li>
                <li class="breadcrumb-item"> <a asp-area="Admin" asp-controller="AdminCourses" asp-action="Index">Quản lý khóa học</a> </li>
                <li class="breadcrumb-item active">@ViewData["Title"]</li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->
    <!-- Section -->
    <section class="section">
        <div class="row">
            <div class="col-lg-6">

                <div class="card">
                    <div class="card-body">


                        <!-- Card Title -->
                        <div class="card-title">
                        </div>
                        <!-- End Card Title -->
                        <!-- Form -->
                        <form class="row g-3" asp-action="Edit" enctype="multipart/form-data">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group col-md-12">
                                <input asp-for="Name" type="text" class="form-control" placeholder="Tên khóa học" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-12">
                                <input asp-for="Description" type="text" class="form-control" placeholder="Mô tả" required>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-12">
                                <img src="~/images/Courses/@Model.Image" width="220px">
                                <input asp-for="Image" type="text" class="input-group-text" readonly>

                                <input name="fThumb" class="form-control" type="file" id="formFile" placeholder="Hình ảnh">
                            </div>

                            <div class="form-group col-md-12">
                                <input asp-for="Price" type="number" class="form-control" placeholder="Giá" required />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                             <div class="form-group col-md-6">
                                <select class="form-select" asp-for="IdCategory" asp-items="ViewBag.IdCategory" required>
                                    <option value="0" disabled selected>Danh mục</option>
                                </select>
                            </div>

                            <div class="form-group col-6">
                                <div class="form-check form-switch">
                                    <input asp-for="Active" class="form-check-input" type="checkbox" id="gridCheck" />
                                    <span asp-validation-for="Active" class="text-danger"></span>
                                    <label class="form-check-label" for="gridCheck">
                                        Kích hoạt
                                    </label>
                                </div>
                            </div>

                           

                            <div class="btn-group">
                                <input type="hidden" asp-for="IdCourse" />
                                <button class="btn btn-outline-warning">
                                    <i class="bi bi-save"></i> Lưu
                                </button>
                                <a type="button" class="btn btn-outline-danger" asp-area="Admin" asp-controller="AdminCourses" asp-action="Index">
                                    <i class="bi bi-x-circle"></i> Hủy
                                </a>
                            </div>
                        </form>
                        <!-- End Form -->


                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- End Section -->
</main>
<!-- End #main -->



