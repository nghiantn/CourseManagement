@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var course = ViewBag.course;
}

<!-- Begin Main Content Area  -->
<main class="main-content">
    <div class="breadcrumb-area section-space-top-100">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Course Details</h2>
                        <ul>
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="Index">Home <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Details</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="single-product-area section-space-top-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="single-product-img h-100">
                        <a href=@course.Image class="single-img gallery-popup">
                            <img class="img-full" src=@course.Image alt="Product Image">
                        </a>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="product-thumb-with-content row">
                        <div class="col-12 order-lg-1 order-2 pt-10 pt-lg-0">
                            <div class="single-product-content">
                                <h2 class="title">@course.Name</h2>
                                <div class="price-box pb-1">
                                    <span class="new-price text-danger">$@course.Price</span>
                                </div>
                                <p class="short-desc mb-6">
                                    @course.Description
                                </p>
                                <ul class="quantity-with-btn pb-7">
                                    <li class="add-to-cart">
                                        <a class="btn btn-custom-size lg-size btn-primary btn-secondary-hover rounded-0" asp-area="" asp-controller="Home" asp-action="Cart">Add to cart</a>
                                    </li>
                                </ul>
                                <div class="product-category text-matterhorn pb-2">
                                    <span class="title">Categories :</span>
                                    <ul>
                                        <li>
                                            <a href="javascript:void(0)">
                                                @course.IdCategoryNavigation.Name
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<!-- Main Content Area End Here  -->